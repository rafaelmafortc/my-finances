generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                String             @id @default(cuid())
  name              String?
  email             String?            @unique
  emailVerified     DateTime?
  image             String?
  accounts          Account[]
  sessions          Session[]
  transactions      Transaction[]
  categories        Category[]
  fixedTransactions FixedTransaction[]
  investmentClasses InvestmentClass[]
  investments       Investment[]
  totalPatrimony    Decimal?           @db.Decimal(12, 2)
}

enum TransactionType {
  INCOME
  EXPENSE
}

model Category {
  id                String             @id @default(cuid())
  name              String
  userId            String
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions      Transaction[]
  fixedTransactions FixedTransaction[]

  @@unique([userId, name])
}

model Transaction {
  id          String          @id @default(cuid())
  date        DateTime
  description String
  value       Decimal         @db.Decimal(12, 2)
  type        TransactionType
  categoryId  String
  userId      String
  isFixed     Boolean         @default(false)
  createdAt   DateTime        @default(now())
  category    Category        @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FixedTransaction {
  id          String          @id @default(cuid())
  description String
  value       Decimal         @db.Decimal(12, 2)
  type        TransactionType
  categoryId  String
  userId      String
  dayOfMonth  Int
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now()) @updatedAt
  category    Category        @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model InvestmentClass {
  id          String       @id @default(cuid())
  name        String
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  investments Investment[]

  @@unique([userId, name])
}

model Investment {
  id                String          @id @default(cuid())
  product           String
  percentage        Decimal         @db.Decimal(5, 2)
  value             Decimal         @db.Decimal(12, 2)
  investmentClassId String
  userId            String
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @default(now()) @updatedAt
  investmentClass   InvestmentClass @relation(fields: [investmentClassId], references: [id], onDelete: Restrict)
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}
